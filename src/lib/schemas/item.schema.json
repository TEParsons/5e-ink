{
    "$id": "item",
    "title": "Item",
    "description": "General schema applying to all items",
    "type": "object",
    "required": ["name", "type", "weight", "cost", "equipped", "description"],
    "properties": {
        "name": {
            "type": "string",
            "default": ""
        },
        "type": {
            "type": "string",
            "enum": [
                "weapon",
                "armour",
                "consumable",
                "container",
                "clothing",
                "tool",
                "book",
                "misc"
            ],
            "default": "misc"
        },
        "equipped": {
            "type": "boolean",
            "default": false
        },
        "weight": {
            "type": "object",
            "properties": {
                "it": {
                    "title": "Tons (imperial)",
                    "type": "number"
                },
                "st": {
                    "title": "Stones",
                    "type": "number"
                },
                "lb": {
                    "title": "Pounds",
                    "type": "number",
                    "default": 1
                },
                "oz": {
                    "title": "Ounces",
                    "type": "number"
                },
                "mt": {
                    "title": "Tonnes (metric)",
                    "type": "number"
                },
                "kg": {
                    "title": "Kilograms",
                    "type": "number"
                },
                "g": {
                    "title": "Grams",
                    "type": "number"
                },
                "mg": {
                    "title": "Milligrams",
                    "type": "number"
                }
            }
        },
        "cost": {
            "type": "object",
            "properties": {
                "cp": {
                    "type": "number",
                    "default": 0
                },
                "sp": {
                    "type": "number",
                    "default": 1
                },
                "gp": {
                    "type": "number",
                    "default": 0
                },
                "ep": {
                    "type": "number",
                    "default": 0
                },
                "pp": {
                    "type": "number",
                    "default": 0
                }
            }
        },
        "description": {
            "type": "string",
            "default": ""
        },
        "params": {
            "type": "object"
        },
        "grants": {
            "$ref": "advancement"
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "weapon"
                    }
                }
            },
            "then": {
                "properties": {
                    "params": {
                        "$ref": "item:weapon"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "armour"
                    }
                }
            },
            "then": {
                "properties": {
                    "params": {
                        "$ref": "item:armour"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "tool"
                    }
                }
            },
            "then": {
                "properties": {
                    "params": {
                        "$ref": "item:tool"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "consumable"
                    }
                }
            },
            "then": {
                "properties": {
                    "params": {
                        "$ref": "item:consumable"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "container"
                    }
                }
            },
            "then": {
                "properties": {
                    "params": {
                        "type": "object",
                        "properties": {
                            "capacity": {
                                "type": "object",
                                "properties": {
                                    "weight": {
                                        "type": "object",
                                        "properties": {
                                            "it": {
                                                "title": "Tons (imperial)",
                                                "type": "number"
                                            },
                                            "st": {
                                                "title": "Stones",
                                                "type": "number"
                                            },
                                            "lb": {
                                                "title": "Pounds",
                                                "type": "number"
                                            },
                                            "oz": {
                                                "title": "Ounces",
                                                "type": "number"
                                            },
                                            "mt": {
                                                "title": "Tonnes (metric)",
                                                "type": "number"
                                            },
                                            "kg": {
                                                "title": "Kilograms",
                                                "type": "number"
                                            },
                                            "g": {
                                                "title": "Grams",
                                                "type": "number"
                                            },
                                            "mg": {
                                                "title": "Milligrams",
                                                "type": "number"
                                            }
                                        }
                                    }
                                }
                            },
                            "contents": {
                                "type": "array",
                                "items": {
                                    "$ref": "#"
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}