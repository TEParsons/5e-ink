{
    "$id": "spell",
    "title": "Spell",
    "description": "Template defining a spell",
    "type": "object",
    "required": ["name", "level", "time", "duration", "components", "school", "description"],
    "properties": {
        "name": {
            "type": "string",
            "default": ""
        }, 
        "level": {
            "type": "string",
            "default": "first",
            "enum": [
                "first",
                "second",
                "third",
                "fourth",
                "fifth",
                "sixth",
                "seventh",
                "eighth",
                "ninth"
            ]
        },
        "range": {
            "type": "object",
            "properties": {
                "distance": {
                    "oneOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "self",
                                "touch"
                            ]
                        }
                    ]
                },
                "aoe": {
                    "type": "object",
                    "properties": {
                        "targets": {
                            "oneOf": [
                                {
                                    "type": "integer"
                                },
                                {
                                    "type": "string",
                                    "enum": [
                                        "visible",
                                        "audible",
                                        "range"
                                    ]
                                }
                            ]
                        },
                        "radius": {
                            "type": "number"
                        },
                        "cube": {
                            "type": "number"
                        },
                        "cone": {
                            "type": "number"
                        },
                        "cylinder": {
                            "type": "object",
                            "properties": {
                                "wide": {
                                    "type": "number"
                                },
                                "long": {
                                    "type": "number"
                                }
                            }
                        },
                        "line": {
                            "type": "object",
                            "properties": {
                                "wide": {
                                    "type": "number"
                                },
                                "long": {
                                    "type": "number"
                                }
                            }
                        },
                        "rectangle": {
                            "type": "object",
                            "properties": {
                                "wide": {
                                    "type": "number"
                                },
                                "long": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
        },
        "time": {
            "type": "object",
            "required": ["type", "amount"],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "action",
                        "bonusaction",
                        "reaction"
                    ],
                    "default": "action"
                },
                "amount": {
                    "type": "integer",
                    "default": 1
                }
            }
        }, 
        "duration": {
            "type": "object",
            "required": ["type"],
            "properties": {
                "type": {
                    "type": "string",
                    "default": "instantaneous",
                    "enum": [
                        "instantaneous",
                        "concentration",
                        "dispell"
                    ]
                },
                "maximum": {
                    "type": "object",
                    "properties": {
                        "rounds": {
                            "type": "number"
                        },
                        "minutes": {
                            "type": "number"
                        },
                        "hours": {
                            "type": "number"
                        }
                    }
                }
            }
        }, 
        "components": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "V",
                    "S",
                    "M"
                ]
            }
        }, 
        "school": {
            "type": "string",
            "default": "abjuration",
            "enum": [
                "abjuration",
                "conjuration",
                "divination",
                "enchantment",
                "evocation",
                "illusion",
                "necromancy",
                "transmutation"
            ]
        }, 
        "description": {
            "type": "string",
            "default": ""
        }
    }
}